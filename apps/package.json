{
  "name": "cap-user-typescript",
  "version": "1.0.0",
  "description": "A simple self-contained user service.",
  "dependencies": {
    "@rocketseat/eslint-config": "^2.1.0",
    "@sap/cds": "^5.1.5",
    "cds-routing-handlers": "^3.0.5",
    "express": "^4.17.1",
    "reflect-metadata": "^0.1.13",
    "sqlite": "^5.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "cds2types": "^2.6.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "sqlite3": "^5.0.3",
    "typescript": "^4.3.4"
  },
  "scripts": {
    "start": "node ./sap-srv/server.js",
    "dev": "npm run build:cds && nodemon",
    "deploy": "cds deploy --to sqlite:user.db",
    "build": "npm run build:cds && npm run build:ts",
    "build:cds": "echo 'Compiling cds sources...' && cds2types --cds ./sap-srv/service.cds --output ./ts-srv/domain/entities.ts --prefix I -f && cds build && cp .cdsrc.json gen/sap-srv",
    "build:ts": "echo 'Compiling *.ts sources...' && tsc"
  }
}
